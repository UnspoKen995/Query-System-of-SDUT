<!--pages/questions/text/text.wxml-->
<view class="page">
  <view class='page__hd'>
    <view class="page__title" >{{index+1}}、{{questionDetail[index]}}</view>
  </view>
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
            <view url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap='answerClick'>
                <view class="weui-cell__bd">{{optionA}}、{{answerA[index]}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
            <view url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap='answerClick'>
                <view class="weui-cell__bd">{{optionB}}、{{answerB[index]}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
            <view url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap='answerClick'>
                <view class="weui-cell__bd">{{optionC}}、{{answerC[index]}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
            <view url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap='answerClick'>
                <view class="weui-cell__bd">{{optionD}}、{{answerD[index]}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
        </view>
  </view>
</view>