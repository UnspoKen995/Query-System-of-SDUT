<!--pages/discuss/text/text.wxml-->
<view class='page'>
  <view class="weui-panel">
    <view class="weui-panel__hd">
      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta">{{title[0]}}</view>
        <view class="weui-media-box__info__meta">时间</view>
        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{author[0]}}</view>
      </view>
    </view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_text">
        <view class="weui-media-box__desc" class='textbox'>{{text[0]}}</view>
      </view>
    </view>
  </view>
</view>