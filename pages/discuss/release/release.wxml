<!--pages/discuss/release/release.wxml-->
<view class='page'>
<view class='page_bd'>
<view class="weui-cells__title">标题</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入标题" />
                </view>
            </view>
        </view>
  
        <view class="weui-cells__title">内容</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请输入内容" style="height: 10em" bindinput="inputs"/>
                    <view class="weui-textarea-counter">{{currentWordNumber|0}}/{{max}}</view>
                </view>
            </view>
        </view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="showTopTips">发布</button>
        </view>
</view>
</view>
