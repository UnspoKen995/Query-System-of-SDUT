<!--pages/discuss/discuss.wxml-->
<view class='page'>
  <view class="weui-panel">
  <view class="weui-panel__hd">
    消息列表 
    <button class="weui-btn mini-btn" type="default" size="mini" class='discussbtn' bindtap='bindToRelease'>发布</button>

    <!-- <button class="weui-btn mini-btn" type="default" size="mini">按钮</button> -->

  </view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_text" bindtap='bindToText'>
        <view class="weui-media-box__title weui-media-box__title_in-text">{{title[0]}}</view>
        <view class="weui-media-box__desc">{{text[0]}}</view>
        <view class="weui-media-box__info">
          <view class="weui-media-box__info__meta">文字来源</view>
          <view class="weui-media-box__info__meta">时间</view>
          <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{author[0]}}</view>
        </view>
      </view>
      <view class="weui-media-box weui-media-box_text">
        <view class="weui-media-box__title weui-media-box__title_in-text">{{title[1]}}</view>
        <view class="weui-media-box__desc">{{text[1]}}</view>
        <view class="weui-media-box__info">
          <view class="weui-media-box__info__meta">文字来源</view>
          <view class="weui-media-box__info__meta">时间</view>
          <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{author[1]}}</view>
        </view>
      </view>
    </view>
  </view>
</view>